<!doctype html>

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <meta name="description" content="" />
    <title>Weather App</title>
    
    <link rel="icon" href="/images/weather.png">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/styles.css">

</head>
<body>
    {{>header}}
    <main>
        <h1>{{title}}</h1>
    
        <p>{{paragraph}}</p>
        
        <p>
            <input class="input" id="address-input" type="text" placeholder="Enter an address or City, State"><br>
            <span id="err-msg">&nbsp;</span><br>
            <button id="address-input-button">Get Weather</button>
        </p>
        
        <p id="results"></p>
    
    
    </main>
    {{>footer}}
    <script src="js/app.js"></script>
</body>
</html>